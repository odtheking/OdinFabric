{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": ["Odtheking"],
  "contact": {
    "homepage": "https://modrinth.com/mod/odin",
    "sources": "https://github.com/odtheking/OdinFabric",
    "issues": "https://github.com/odtheking/OdinFabric/issues"
  },
  "icon": "assets/odin/icon.png",
  "license": "BSD 3-Clause",
  "environment": "client",
  "entrypoints": {
    "modmenu": [
      "com.odtheking.odin.clickgui.ModMenuIntegration"
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "com.odtheking.odin.OdinMod"
      }
    ]
  },
  "mixins": [
    "odin.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric-api": ">=${fabric_api_version}",
    "minecraft": "~${minecraft_version}",
    "fabric-language-kotlin": ">=${fabric_kotlin_version}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/8Fqsg5xBP3"
      },
      "update_checker": true
    }
  }
}